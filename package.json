{
  "name": "low-code-platform",
  "type": "module",
  "version": "1.1.1",
  "private": true,
  "packageManager": "pnpm@10.2.1",
  "scripts": {
    "dev": "pnpm build && turbo dev",
    "build": "run-p build:ai build:cli build:core build:designer build:dsl build:form build:runtime-ui build:schema build:stage build:utils",
    "build:ai": "turbo build --filter=@lowcode/ai",
    "build:cli": "turbo build --filter=@lowcode/cli",
    "build:core": "turbo build --filter=@lowcode/core",
    "build:designer": "turbo build --filter=@lowcode/designer",
    "build:dsl": "turbo build --filter=@lowcode/dsl-resolver",
    "build:form": "turbo build --filter=@lowcode/form",
    "build:runtime-ui": "turbo build --filter=@lowcode/runtime-ui",
    "build:schema": "turbo build --filter=@lowcode/schema",
    "build:stage": "turbo build --filter=@lowcode/stage",
    "build:utils": "turbo build --filter=@lowcode/utils",
    "build:playground": "turbo build --filter=runtime-vue3 && turbo build --filter=playground",
    "lint": "turbo lint",
    "clean:top": "rimraf */**/dist */**/entry-dist */dist coverage dwt*",
    "clean:modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "prepare": "simple-git-hooks",
    "release": "vv"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.1",
    "@types/node": "^20.17.17",
    "@unocss/eslint-plugin": "^65.4.3",
    "eslint": "^9.20.0",
    "lint-staged": "^15.4.3",
    "nbump": "^2.0.7",
    "npm-run-all2": "^7.0.2",
    "rimraf": "^6.0.1",
    "shx": "^0.3.4",
    "simple-git-hooks": "^2.11.1",
    "turbo": "^2.4.0",
    "typescript": "5.6.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,jsx,tsx,json}": [
      "eslint --fix"
    ]
  }
}
