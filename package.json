{
  "name": "low-code-platform",
  "type": "module",
  "version": "1.1.1",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "dev": "pnpm build && turbo dev",
    "build": "turbo build --filter=@lowcode/* ",
    "build:playground": "turbo build --filter=runtime-vue3 && turbo build --filter=playground",
    "lint": "turbo lint",
    "clean:top": "rimraf */**/dist */**/entry-dist */dist coverage dwt*",
    "clean:modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "prepare": "simple-git-hooks",
    "release": "vv"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.1.1",
    "@types/node": "^20.17.19",
    "@unocss/eslint-plugin": "^65.5.0",
    "eslint": "^9.21.0",
    "lint-staged": "^15.4.3",
    "nbump": "^2.0.7",
    "npm-run-all2": "^7.0.2",
    "rimraf": "^6.0.1",
    "shx": "^0.3.4",
    "simple-git-hooks": "^2.11.1",
    "turbo": "^2.4.2",
    "typescript": "5.6.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,jsx,tsx,json}": [
      "eslint --fix"
    ]
  }
}
